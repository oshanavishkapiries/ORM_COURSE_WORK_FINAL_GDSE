<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="40.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.therapycenter.controller.DashBoardController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <Label text="Welcome to Mental Health Therapy Center" textFill="#06264B">
         <font>
            <Font name="Arial Bold" size="32.0" />
         </font>
         <effect>
            <DropShadow height="4.0" radius="1.5" width="4.0">
               <color>
                  <Color opacity="0.1" />
               </color>
            </DropShadow>
         </effect>
      </Label>
      
      <HBox alignment="CENTER" spacing="24.0">
         <children>
            <VBox alignment="CENTER" minHeight="140.0" minWidth="170.0" style="-fx-background-color: white; -fx-background-radius: 16;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label fx:id="therapistsCount" text="0" textFill="#0056D2">
                     <font>
                        <Font name="Arial Bold" size="42.0" />
                     </font>
                  </Label>
                  <Label text="Therapists" textFill="#4A4A4A">
                     <font>
                        <Font name="Arial" size="16.0" />
                     </font>
                  </Label>
               </children>
               <effect>
                  <DropShadow height="20.0" radius="9.5" width="20.0">
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
            
            <VBox alignment="CENTER" minHeight="140.0" minWidth="170.0" style="-fx-background-color: white; -fx-background-radius: 16;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label fx:id="patientsCount" text="0" textFill="#0056D2">
                     <font>
                        <Font name="Arial Bold" size="42.0" />
                     </font>
                  </Label>
                  <Label text="Patients" textFill="#4A4A4A">
                     <font>
                        <Font name="Arial" size="16.0" />
                     </font>
                  </Label>
               </children>
               <effect>
                  <DropShadow height="20.0" radius="9.5" width="20.0">
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
            
            <VBox alignment="CENTER" minHeight="140.0" minWidth="170.0" style="-fx-background-color: white; -fx-background-radius: 16;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label fx:id="programsCount" text="0" textFill="#0056D2">
                     <font>
                        <Font name="Arial Bold" size="42.0" />
                     </font>
                  </Label>
                  <Label text="Programs" textFill="#4A4A4A">
                     <font>
                        <Font name="Arial" size="16.0" />
                     </font>
                  </Label>
               </children>
               <effect>
                  <DropShadow height="20.0" radius="9.5" width="20.0">
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
            
            <VBox alignment="CENTER" minHeight="140.0" minWidth="170.0" style="-fx-background-color: white; -fx-background-radius: 16;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label fx:id="sessionsCount" text="0" textFill="#0056D2">
                     <font>
                        <Font name="Arial Bold" size="42.0" />
                     </font>
                  </Label>
                  <Label text="Sessions Today" textFill="#4A4A4A">
                     <font>
                        <Font name="Arial" size="16.0" />
                     </font>
                  </Label>
               </children>
               <effect>
                  <DropShadow height="20.0" radius="9.5" width="20.0">
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
